<p id="notice"><%= notice %></p>
<h1  class= "text-center text-dark">Alpha Blog Users</h1>
  <% @users.each do |user| %>

  
<div class="card mt-4 justify-content-center" style="width: 18rem;">
 <%= image_tag "image.jpg", height: 300 , class:"card-img-top" , alt:"Card image cap"%>
 <%= link_to "New Article", about_path , class: "btn-btn-primary text-dark" %>

  <div class="card-body">
    <h5 class="card-title"><%= user.username %></h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
  
    <% link_to 'Show', user, class:"btn btn-primary" %>
  </div>
</div>

   <% end %>


<div class="container">
<table>
  <thead>
    <tr>
      <th>Username</th>
         <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>


    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
           <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<br>

<%= link_to 'New User', new_user_path %>


